# Make swapfile (17GB)
dd if=/dev/zero of=/swapfile bs=1M count=17408 status=progress
sudo mkswap /swapfile
sudo chmod 600 /swapfile
sudo swapon /swapfile
#add entry to /etc/fstab
/swapfile 		none    	swap    	sw 	0 0

